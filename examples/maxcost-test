
for ex in toys/*.lp; do
  for cost in {5..10}; do
    gtimeout 10s time java -jar ../xhail-0.5.2/xhail.jar -b -c /usr/bin/clasp -g /usr/bin/gringo $ex $cost 2>&1 | grep 'ERROR\|meaningful\|Caused by\|No match found' &> /dev/null
    if [ $? != 0 ]; then
      echo "maxcost found for $ex"
      break
    fi
    if [ $cost == 10 ]; then
      echo "unsatisfiable example: $ex"
    fi
  done
done
